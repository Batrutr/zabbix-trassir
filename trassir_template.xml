<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>6.0</version>
    <date>2026-01-27T12:00:00Z</date>
    <groups>
        <group>
            <uuid>7df96b18f2304087ad29bb8bf6f8e6e9</uuid>
            <name>Templates/Video Surveillance</name>
        </group>
    </groups>
    <templates>
        <template>
            <uuid>a571c0d144b54967a915ab6dac3b1f1e</uuid>
            <template>TRASSIR Server</template>
            <name>TRASSIR Server Monitoring</name>
            <description>Мониторинг состояния каналов TRASSIR через SDK API</description>
            <groups>
                <group>
                    <name>Templates/Video Surveillance</name>
                </group>
            </groups>
            <items>
                <item>
                    <uuid>f1e2d3c4b5a647868532d1fedcba0987</uuid>
                    <name>TRASSIR: Get objects list</name>
                    <type>HTTP_AGENT</type>
                    <key>trassir.objects</key>
                    <delay>1m</delay>
                    <history>1h</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>Получение списка всех объектов сервера TRASSIR</description>
                    <timeout>10s</timeout>
                    <url>{$TRASSIR.URL}/objects/?username={$TRASSIR.USERNAME}&amp;password={$TRASSIR.PASSWORD}</url>
                    <verify_host>NO</verify_host>
                    <verify_peer>NO</verify_peer>
                    <preprocessing>
                        <step>
                            <type>CHECK_NOT_SUPPORTED</type>
                            <parameters>
                                <parameter/>
                            </parameters>
                            <error_handler>CUSTOM_VALUE</error_handler>
                            <error_handler_params>[]</error_handler_params>
                        </step>
                    </preprocessing>
                    <tags>
                        <tag>
                            <tag>component</tag>
                            <value>trassir</value>
                        </tag>
                    </tags>
                </item>
                <item>
                    <uuid>a1b2c3d4e5f64718a9384756abcdef01</uuid>
                    <name>TRASSIR: Server health</name>
                    <type>HTTP_AGENT</type>
                    <key>trassir.health</key>
                    <delay>30s</delay>
                    <history>7d</history>
                    <value_type>TEXT</value_type>
                    <description>Состояние здоровья сервера TRASSIR</description>
                    <timeout>10s</timeout>
                    <url>{$TRASSIR.URL}/health?username={$TRASSIR.USERNAME}&amp;password={$TRASSIR.PASSWORD}</url>
                    <verify_host>NO</verify_host>
                    <verify_peer>NO</verify_peer>
                    <tags>
                        <tag>
                            <tag>component</tag>
                            <value>health</value>
                        </tag>
                    </tags>
                </item>
                <item>
                    <uuid>11223344556647889900aabbccddeeff</uuid>
                    <name>TRASSIR: Channels online</name>
                    <type>DEPENDENT</type>
                    <key>trassir.channels.online</key>
                    <delay>0</delay>
                    <history>7d</history>
                    <description>Количество каналов онлайн</description>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <parameters>
                                <parameter>$.channels_online</parameter>
                            </parameters>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>trassir.health</key>
                    </master_item>
                    <tags>
                        <tag>
                            <tag>component</tag>
                            <value>channels</value>
                        </tag>
                    </tags>
                </item>
                <item>
                    <uuid>ffeeddccbbaa40998877665544332211</uuid>
                    <name>TRASSIR: Channels total</name>
                    <type>DEPENDENT</type>
                    <key>trassir.channels.total</key>
                    <delay>0</delay>
                    <history>7d</history>
                    <description>Общее количество каналов</description>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <parameters>
                                <parameter>$.channels_total</parameter>
                            </parameters>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>trassir.health</key>
                    </master_item>
                    <tags>
                        <tag>
                            <tag>component</tag>
                            <value>channels</value>
                        </tag>
                    </tags>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <uuid>123456789abc4ef092345678abcdef01</uuid>
                    <name>TRASSIR Channel Discovery</name>
                    <type>DEPENDENT</type>
                    <key>trassir.channel.discovery</key>
                    <delay>0</delay>
                    <lifetime>7d</lifetime>
                    <description>Автоматическое обнаружение каналов TRASSIR</description>
                    <item_prototypes>
                        <item_prototype>
                            <uuid>99887766554443229100ffeeddccbbaa</uuid>
                            <name>Channel [{#CHANNEL.NAME}]: Signal status</name>
                            <type>HTTP_AGENT</type>
                            <key>trassir.channel.signal[{#CHANNEL.GUID}]</key>
                            <delay>30s</delay>
                            <history>7d</history>
                            <description>Статус сигнала канала: 1 - Signal, 0 - No Signal</description>
                            <timeout>10s</timeout>
                            <url>{$TRASSIR.URL}/objects/{#CHANNEL.GUID}?username={$TRASSIR.USERNAME}&amp;password={$TRASSIR.PASSWORD}</url>
                            <verify_host>NO</verify_host>
                            <verify_peer>NO</verify_peer>
                            <valuemap>
                                <name>Signal status</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <parameters>
                                        <parameter>$.state_vector[0]</parameter>
                                    </parameters>
                                    <error_handler>CUSTOM_VALUE</error_handler>
                                    <error_handler_params>No Signal</error_handler_params>
                                </step>
                                <step>
                                    <type>JAVASCRIPT</type>
                                    <parameters>
                                        <parameter>return value === "Signal" ? 1 : 0;</parameter>
                                    </parameters>
                                </step>
                            </preprocessing>
                            <tags>
                                <tag>
                                    <tag>channel</tag>
                                    <value>{#CHANNEL.NAME}</value>
                                </tag>
                                <tag>
                                    <tag>component</tag>
                                    <value>signal</value>
                                </tag>
                            </tags>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <uuid>fedcba9876544210bedcba9876543210</uuid>
                                    <expression>last(/TRASSIR Server/trassir.channel.signal[{#CHANNEL.GUID}])=0</expression>
                                    <name>Channel [{#CHANNEL.NAME}]: No signal detected</name>
                                    <priority>WARNING</priority>
                                    <description>На канале {#CHANNEL.NAME} отсутствует сигнал</description>
                                    <manual_close>YES</manual_close>
                                    <tags>
                                        <tag>
                                            <tag>channel</tag>
                                            <value>{#CHANNEL.NAME}</value>
                                        </tag>
                                        <tag>
                                            <tag>scope</tag>
                                            <value>availability</value>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#CHANNEL.GUID}</lld_macro>
                            <path>$.guid</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#CHANNEL.NAME}</lld_macro>
                            <path>$.name</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <parameters>
                                <parameter>$[?(@.class=="Channel")]</parameter>
                            </parameters>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>trassir.objects</key>
                    </master_item>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$TRASSIR.PASSWORD}</macro>
                    <value>password</value>
                    <description>Пароль пользователя TRASSIR</description>
                </macro>
                <macro>
                    <macro>{$TRASSIR.URL}</macro>
                    <value>https://192.168.1.200:8080</value>
                    <description>URL сервера TRASSIR (например: https://192.168.1.200:8080)</description>
                </macro>
                <macro>
                    <macro>{$TRASSIR.USERNAME}</macro>
                    <value>Admin</value>
                    <description>Имя пользователя TRASSIR</description>
                </macro>
            </macros>
            <valuemaps>
                <valuemap>
                    <uuid>abcdef1234564890abcdef1234567890</uuid>
                    <name>Signal status</name>
                    <mappings>
                        <mapping>
                            <value>0</value>
                            <newvalue>No Signal</newvalue>
                        </mapping>
                        <mapping>
                            <value>1</value>
                            <newvalue>Signal</newvalue>
                        </mapping>
                    </mappings>
                </valuemap>
            </valuemaps>
        </template>
    </templates>
</zabbix_export>
